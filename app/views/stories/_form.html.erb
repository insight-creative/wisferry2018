<%= form_for(@story, html: {multipart: true}) do |f| %>
  <ul>
    <% @story.errors.full_messages.each do |error| %>
    <li><%= error %></li>
    <% end %>
  </ul>
  <%= invisible_captcha %>
  <div class="col-md-12">
    <div class="form-group">
      <%= f.text_field :title, class: 'form-control', placeholder: 'Story title', :required => true %>
    </div>
    <div class="row">
      <div class="col-sm-6">
        <div class="form-group">
          <%= f.text_field :name, class: 'form-control', placeholder: 'Your name (optional)' %>
        </div>
      </div>
      <div class="col-sm-6">
        <div class="form-group">
          <%= f.text_field :city, class: 'form-control', placeholder: 'Your location (optional)' %>
        </div>
      </div>
    </div>
    <div class="form-group">
      <%= f.text_area :body, class: 'form-control', placeholder: 'Tell your story!', rows: '5', :required => true %>
    </div>
    <div class="form-group">
      <% if @story.image.exists? %>
        <%= image_tag @story.image.url %><br>
        <%= f.label :image, "Replace with a new image:" %>
      <% else %>
        <%= f.label :image, "Attach an image:" %>
      <% end %>
      <%= f.file_field :image %>
    </div>
    <%= f.submit "Share Your Story", class: "btn btn-default" %>
  </div>
<% end %>
